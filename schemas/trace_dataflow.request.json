{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "trace_dataflow request",
  "type": "object",
  "required": ["project_id", "target_addr"],
  "additionalProperties": false,
  "properties": {
    "project_id": {"$ref": "common.json#/$defs/uuid"},
    "target_addr": {"$ref": "common.json#/$defs/hex-address"},
    "target_stmt": {
      "type": "integer",
      "default": -1
    },
    "use_ddg": {"type": "boolean", "default": false},
    "use_cdg": {"type": "boolean", "default": false}
  }
}
