{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "inspect_state response",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "registers": {
      "type": "object",
      "additionalProperties": {"type": "integer"}
    },
    "memory": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["address", "size"],
        "properties": {
          "address": {"$ref": "common.json#/$defs/hex-address"},
          "size": {"type": "integer", "minimum": 1},
          "concrete": {
            "anyOf": [
              {"type": "string", "contentEncoding": "base64"},
              {"type": "null"}
            ]
          }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {"type": "string"}
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["event", "addr"],
        "properties": {
          "event": {"type": "string"},
          "addr": {"$ref": "common.json#/$defs/hex-address"},
          "address": {"$ref": "common.json#/$defs/hex-address"},
          "length": {"type": "integer", "minimum": 0}
        },
        "additionalProperties": true
      }
    },
    "alerts": {
      "type": "array",
      "items": {"$ref": "common.json#/$defs/alert"}
    }
  }
}
