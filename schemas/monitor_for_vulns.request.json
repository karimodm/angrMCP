{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "monitor_for_vulns request",
  "type": "object",
  "required": ["project_id", "state_id", "events"],
  "additionalProperties": false,
  "properties": {
    "project_id": {"$ref": "common.json#/$defs/uuid"},
    "state_id": {"$ref": "common.json#/$defs/uuid"},
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["mem_write", "exit", "call", "return"]
      }
    }
  }
}
