{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "instrument_environment request",
  "type": "object",
  "required": ["project_id", "hooks"],
  "additionalProperties": false,
  "properties": {
    "project_id": {"$ref": "common.json#/$defs/uuid"},
    "hooks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "hook_id": {"$ref": "common.json#/$defs/uuid"},
          "address": {"$ref": "common.json#/$defs/hex-address"},
          "symbol": {"type": "string"},
          "length": {"type": "integer", "minimum": 0},
          "simprocedure": {
            "type": "string",
            "description": "angr SimProcedure identifier in 'lib.name' format."
          },
          "python_callable": {
            "type": "string",
            "description": "Dotted path to a Python callable injected as a hook."
          }
        },
        "anyOf": [
          {"required": ["simprocedure"]},
          {"required": ["python_callable"]}
        ],
        "oneOf": [
          {
            "required": ["address"],
            "not": {"required": ["symbol"]}
          },
          {
            "required": ["symbol"],
            "not": {"required": ["address"]}
          }
        ]
      }
    }
  }
}
