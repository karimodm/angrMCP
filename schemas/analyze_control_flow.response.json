{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "analyze_control_flow response",
  "type": "object",
  "required": ["analysis", "node_count", "edge_count", "functions"],
  "properties": {
    "analysis": {"type": "string", "enum": ["CFGFast", "CFGEmulated"]},
    "node_count": {"type": "integer", "minimum": 0},
    "edge_count": {"type": "integer", "minimum": 0},
    "functions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["addr", "name"],
        "properties": {
          "addr": {"$ref": "common.json#/$defs/hex-address"},
          "name": {"type": "string"},
          "returning": {"type": "boolean"},
          "has_unresolved_calls": {"type": "boolean"}
        },
        "additionalProperties": false
      }
    }
  }
}
