{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "inspect_state request",
  "type": "object",
  "required": ["project_id", "state_id"],
  "additionalProperties": false,
  "properties": {
    "project_id": {"$ref": "common.json#/$defs/uuid"},
    "state_id": {"$ref": "common.json#/$defs/uuid"},
    "registers": {
      "type": "array",
      "items": {"type": "string"}
    },
    "memory": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["address", "size"],
        "properties": {
          "address": {"$ref": "common.json#/$defs/hex-address"},
          "size": {"type": "integer", "minimum": 1}
        }
      }
    },
    "include_constraints": {"type": "boolean", "default": false},
    "include_events": {"type": "boolean", "default": false},
    "include_alerts": {"type": "boolean", "default": false}
  }
}
